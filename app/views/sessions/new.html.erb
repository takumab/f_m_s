<div class="container" id="log-in">
	
	<h1>Log In</h1>

	<%= form_tag sessions_path do %>
		<div class="form-group">
			<%= label_tag :email %> <br/>
			<%= text_field_tag :email, params[:email], class: "form-control", placeholder: 'jdoe@example.com' %>
		</div>
		<div class="form-group">
			<%= label_tag :password %> <br/>
			<%= password_field_tag :password, nil,  class: "form-control", placeholder: 'Enter password'  %>
		</div>
		<div class="actions"><%= submit_tag "Log In", class: "btn btn-primary" %></div>
	<% end %>

</div>
