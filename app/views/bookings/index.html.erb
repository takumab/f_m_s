<div id="bookings">
	<h2 style="text-align: center;">Appointments</h2>

	<h2 id="month">
		<%= link_to date: @date.prev_month, class: "btn btn-default" do %>
			<i class="glyphicon glyphicon-chevron-left"></i>
		<% end %>
		<%= @date.strftime("%B %Y") %>
		<%= link_to date: @date.next_month, class: "btn btn-default" do %>
			<i class="glyphicon glyphicon-chevron-right"></i>
		<% end %>
	</h2>
	
	<%# Calendar helper method %>
	<%= calendar @date do |date| %>
		<%= link_to date.day, new_booking_path %>
		<% if @bookings_by_date[date] %>
			<ul>
				<% @bookings_by_date[date].each do |booking| %>
					<li><%= link_to booking.description, booking %></li>
				<% end %>
				
			</ul>
		<% end %>
	<% end %>
</div>