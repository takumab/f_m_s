<h2>Bookings</h2>

<div id="bookings">
	<%# Calendar helper method %>
	<%= calendar @date do |date| %>
		<%= date.day %>
		<% if @bookings_by_date[date] %>
			<ul>
				<% @bookings_by_date[date].each do |booking| %>
					<li><%= link_to booking.name, booking %></li>
				<% end %>
				
			</ul>
		<% end %>
	<% end %>
</div>