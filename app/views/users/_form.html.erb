<%= form_for(@user) do |f| %>
	<% if @user.errors.any? %>
		<div class="error_explanantion">
			<h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved.</h2>
			<ul>
				<% @user.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<div class="form-group">
		<%= f.label :email %> <br>
		<%= f.text_field :email, class: "form-control", placeholder: 'jdoe@example.com' %>
	</div>
	<div class="form-group">
		<%= f.label :password %> <br>
		<%= f.password_field :password, class: "form-control", placeholder: 'Minimum 8 characters'%>
	</div>
	<div class="form-group">
		<%= f.label :password_confirmation %> <br>
		<%= f.password_field :password_confirmation, class: "form-control", placeholder: 'Re-enter password' %>
	</div>


	<div class="actions">
		<%= f.submit 'Sign Up', class: "btn btn-primary" %>
	</div>
<% end %>